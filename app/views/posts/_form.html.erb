<%= form_for(@post, :html => { :class => 'form-horizontal' }) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :user_id, value: current_user.id %>
  
  <%= f.select 'theme_id', current_user.themes.collect { |t| [ t.title, t.id] } %>
  <%= link_to 'New theme', new_theme_path %>
  
  
  <div class='control-group'>
    <%= f.label :emotion_id, :class => 'control-label' %>
    <div class='controls'>
      <%= f.number_field :emotion_id %>
    </div>
  </div>
  
  <div class='control-group'>
    <%= f.label :title, :class => 'control-label' %>
    <div class='controls'>
      <%= f.text_field :title, :placeholder => 'Title' %>
    </div>
  </div>
  
  <div class='control-group'>
    <%= f.label :body, :class => 'control-label' %>
    <div class='controls'>
      <%= f.text_field :body, :placeholder => 'Enter your story' %>
    </div>
  </div>
  
  <div class='control-group'>
    <%= f.label :photo, :class => 'control-label' %>
    <div class='controls'>
      <%= f.file_field :photo %>
    </div>
  </div>
  
  <div class='control-group'>
    <%= f.submit %>
  </div>
  
<% end %>
